@page
@model BearcatSportsBuyback.Pages.Members.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div style="padding-top: 56px">
<h1 class="fw-bolder text-white text-center" style="background-image: url(https://www.color-meanings.com/wp-content/uploads/Red-and-black-stripe-pattern.jpeg); background-size:100% 100%">Create New Member</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Member.FirstName" class="control-label"></label>
                <input asp-for="Member.FirstName" class="form-control" />
                <span asp-validation-for="Member.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.LastName" class="control-label"></label>
                <input asp-for="Member.LastName" class="form-control" />
                <span asp-validation-for="Member.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.StreetAddress" class="control-label"></label>
                <input asp-for="Member.StreetAddress" class="form-control" />
                <span asp-validation-for="Member.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.City" class="control-label"></label>
                <input asp-for="Member.City" class="form-control" />
                <span asp-validation-for="Member.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.State" class="control-label"></label>
                <input asp-for="Member.State" class="form-control" />
                <span asp-validation-for="Member.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Zip" class="control-label"></label>
                <input asp-for="Member.Zip" class="form-control" />
                <span asp-validation-for="Member.Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Email" class="control-label"></label>
                <input asp-for="Member.Email" class="form-control" />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Phone" class="control-label"></label>
                <input asp-for="Member.Phone" class="form-control" />
                <span asp-validation-for="Member.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.SportId" class="control-label"></label>
                <select asp-for="Member.SportId" class ="form-control" asp-items="ViewBag.SportId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Member.LeagueInterest" class="control-label"></label>
                <input asp-for="Member.LeagueInterest" class="form-control" />
                <span asp-validation-for="Member.LeagueInterest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.LeagueNameId" class="control-label"></label>
                <select asp-for="Member.LeagueNameId" class ="form-control" asp-items="ViewBag.LeagueNameId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
