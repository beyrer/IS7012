@page
@model BearcatSportsBuyback.Pages.SportingGoods.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div style="padding-top: 56px">
<h1 class="godown-60 fw-bolder text-white text-center" style="background-image: url(https://www.color-meanings.com/wp-content/uploads/Red-and-black-stripe-pattern.jpeg); background-size:100% 100%">Create Sporting Good</h1>

<h4>Sporting Good</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SportingGood.Name" class="control-label"></label>
                <input asp-for="SportingGood.Name" class="form-control" />
                <span asp-validation-for="SportingGood.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportingGood.Quantity" class="control-label"></label>
                <input asp-for="SportingGood.Quantity" class="form-control" />
                <span asp-validation-for="SportingGood.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportingGood.SportId" class="control-label"></label>
                <select asp-for="SportingGood.SportId" class ="form-control" asp-items="ViewBag.SportId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>