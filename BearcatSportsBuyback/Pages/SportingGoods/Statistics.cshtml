@page
@model BearcatSportsBuyback.Pages.SportingGoods.StatisticsModel

@{
    ViewData["Title"] = "Statistics";
}

<div style="padding-top: 56px">
<h1 class="fw-bolder text-white text-center" style="background-image: url(https://www.color-meanings.com/wp-content/uploads/Red-and-black-stripe-pattern.jpeg); background-size:100% 100%">Statistics</h1>

<ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Total number of items in Sporting Goods
        <span style="color:black" class="badge badge-primary badge-pill">@Model.TotalQuantity</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Average Quanity
        <span style="color:black" class="badge badge-primary badge-pill">@Model.AverageQuantity</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Sum of all Quanities
        <span style="color:black" class="badge badge-primary badge-pill">@Model.TQuantity</span>
    </li>
 </ul>
</div>
<a class="btn btn-secondary mb-2" asp-page="Index">Return to Sporting Goods</a>