@page
@model BearcatSportsBuyback.Pages.Leagues.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div style="padding-top: 56px">
<h1 class="fw-bolder text-white text-center" style="background-image: url(https://www.color-meanings.com/wp-content/uploads/Red-and-black-stripe-pattern.jpeg); background-size:100% 100%">League Details</h1>

<div>
    <h4>League</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.League.LeagueName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.League.LeagueName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.League.Sport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.League.Sport.SportName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@Model.League?.Id">Edit</a> |
    <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
</div>
</div>
