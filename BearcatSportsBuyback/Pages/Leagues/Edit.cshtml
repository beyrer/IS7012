@page
@model BearcatSportsBuyback.Pages.Leagues.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div style="padding-top: 56px">
<h1 class="fw-bolder text-white text-center" style="background-image: url(https://www.color-meanings.com/wp-content/uploads/Red-and-black-stripe-pattern.jpeg); background-size:100% 100%">Edit League</h1>

<h4>League</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="League.Id" />
            <div class="form-group">
                <label asp-for="League.LeagueName" class="control-label"></label>
                <input asp-for="League.LeagueName" class="form-control" />
                <span asp-validation-for="League.LeagueName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="League.SportId" class="control-label"></label>
                <select asp-for="League.SportId" class="form-control" asp-items="ViewBag.SportId"></select>
                <span asp-validation-for="League.SportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
